<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1280px"
    android:layout_height="720px"
    android:background="#256466">

	<AbsoluteLayout
	    android:id="@+id/loginxml"
	    android:layout_width="1280px"
	    android:layout_height="720px"
	    android:visibility="visible" >

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="150px"
	        android:layout_height="42dp"
	        android:layout_marginRight="23dp"
	        android:layout_marginTop="71dp"
	        android:layout_x="328dp"
	        android:layout_y="341dp"
	        android:gravity="left|center_vertical"
	        android:text="@string/password"
	        android:textSize="23px" />

	    <TextView
	        android:id="@+id/TextView01"
	        android:layout_width="150dp"
	        android:layout_height="42dp"
	        android:layout_marginTop="53dp"
	        android:layout_x="324dp"
	        android:layout_y="270dp"
	        android:gravity="left"
	        android:text="@string/userid"
	        android:textSize="25px" />
	    <EditText
	        android:id="@+id/login_userid"
	        android:layout_width="400px"
	        android:layout_height="50px"
	        android:layout_marginLeft="300dp"
	        android:layout_marginTop="206dp"
	        android:layout_x="521dp"
	        android:layout_y="264dp"
	        android:singleLine="true"
	        android:textSize="22px"
	        android:paddingLeft="20px"
	        android:textColor="@drawable/search_button_for_textcolor"
	        android:maxLength="40"
	        android:gravity="left|center_vertical"
	        android:imeOptions="actionDone"
	         />
	    <EditText
	        android:id="@+id/login_password"
	        android:layout_width="400px"
	        android:layout_height="50px"
	        android:layout_marginLeft="300dp"
	        android:layout_marginTop="206dp"
	        android:layout_x="521dp"
	        android:layout_y="336dp"
	        android:textColor="@drawable/search_button_for_textcolor"
	        android:singleLine="true"
	        android:paddingLeft="20px"
	        android:maxLength="40"
	        android:gravity="left|center_vertical"
	        android:inputType="textVisiblePassword"
	        android:imeOptions="actionDone"
	        android:textSize="22px"
	       />

	    <CheckBox
	        android:id="@+id/login_checkbox"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_x="458dp"
	        android:layout_y="424dp"
	        android:paddingLeft="20px"
	        android:textSize="20px"
	        android:text="@string/save_name" />

	    <Button
	        android:id="@+id/login_ok"
	        android:layout_width="150px"
	        android:layout_height="wrap_content"
	        android:layout_x="555dp"
	        android:layout_y="506dp"
	        android:background="@drawable/search_button_select"
	        android:gravity="center"
	        android:text="@string/ok"
	        android:textColor="@drawable/search_button_for_textcolor"
	        android:textSize="21px" />

	    <TextView
	        android:id="@+id/login_warnInfo"
	        android:layout_width="200px"
	        android:layout_height="wrap_content"
	        android:layout_x="750dp"
	        android:layout_y="530dp"
	        android:textColor="#cd0f26"
	        android:textSize="20px"
	        android:visibility="gone"
	        android:text="@string/username_password_err" />

	</AbsoluteLayout>

    </AbsoluteLayout>
