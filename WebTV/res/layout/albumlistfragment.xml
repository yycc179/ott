<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="951px"
    android:layout_height="170px"
     >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65px"
	 >

        <ImageView
            android:id="@+id/pageback_line1"
            android:layout_width="22px"
            android:layout_height="37px"
            android:layout_marginTop="15px"
            android:layout_centerVertical="true"
            android:src="@drawable/new_ott_prev" />

        <GridView
            android:id="@+id/detail_serial_1"
            android:layout_marginLeft="66px"
            android:layout_width="820px"
            android:layout_height="65px"
            android:layout_gravity="center"
            android:horizontalSpacing="10px"
            android:listSelector="#00000000"
            android:numColumns="10" />

        <ImageView
            android:id="@+id/pagedown_line1"
            android:layout_marginLeft="929px"
            android:layout_width="22px"
            android:layout_height="37px"
            android:layout_marginTop="15px"
            android:layout_centerVertical="true"
            android:src="@drawable/gridview_page_down" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="65px"
        android:layout_marginTop="65px"
	 >

        <ImageView
            android:id="@+id/pageback_line2"
            android:layout_width="22px"
            android:layout_height="37px"
            android:layout_marginTop="15px"
            android:layout_centerVertical="true"
            android:src="@drawable/new_ott_prev" />

        <GridView
            android:id="@+id/detail_serial_2"
            android:layout_width="820px"
            android:layout_height="65px"
            android:layout_gravity="center"
            android:layout_marginLeft="68px"
            android:horizontalSpacing="10px"
            android:listSelector="#00000000"
            android:numColumns="5" />

        <ImageView
            android:id="@+id/pagedown_line2"
            android:layout_marginLeft="929px"
            android:layout_width="22px"
            android:layout_height="37px"
            android:layout_marginTop="15px"
            android:layout_centerVertical="true"
            android:src="@drawable/gridview_page_down" />
    </RelativeLayout>

</RelativeLayout>