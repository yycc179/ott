<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/tv_info"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:textColor="#ff0000"
            android:textSize="60dp" />

        <AbsoluteLayout
            android:id="@+id/IDC_VIEW_ChanInfoBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200px"
            android:layout_marginTop="520px" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="49px"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/chnbar_bg1_left"
                    android:layout_width="10px"
                    android:layout_height="49px"
                    android:layout_x="0px"
                    android:layout_y="0px"
                    android:background="@drawable/live_infobar_titlebg1" />

                <ImageView
                    android:id="@+id/chnbar_bg1_mid"
                    android:layout_width="800px"
                    android:layout_height="49px"
                    android:layout_x="10px"
                    android:layout_y="0px"
                    android:background="@drawable/live_infobar_titlebg2" />

                <ImageView
                    android:id="@+id/chnbar_bg1_right"
                    android:layout_width="10px"
                    android:layout_height="49px"
                    android:layout_x="810px"
                    android:layout_y="0px"
                    android:background="@drawable/live_infobar_titlebg3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="820px"
                android:layout_height="49px"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/IDC_TextView_chninfobar_chnno"
                    android:layout_width="70px"
                    android:layout_height="46px"
                    android:layout_marginStart="10px"
                    android:gravity="center|right"
                    android:paddingEnd="5px"
                    android:textAlignment="viewStart"
                    android:textColor="#A7D9FC"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/IDC_TextView_chninfobar_chnname"
                    android:layout_width="328px"
                    android:layout_height="46px"
                    android:gravity="center|left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingEnd="10px"
                    android:paddingStart="15px"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    android:textColor="#FFFFFF"
                    android:textSize="26px" />

                <TextClock
                    android:layout_width="match_parent"
                    android:layout_height="49px"
                    android:layout_gravity="right"
                    android:layout_marginEnd="10px"
                    android:layout_marginStart="128px"
                    android:format24Hour="yyyy/MM/dd HH:mm:ss"
                    android:gravity="center|left"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingEnd="10px"
                    android:paddingStart="10px"
                    android:singleLine="true"
                    android:textColor="#A7D9FC"
                    android:textSize="23px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="820px"
                android:layout_height="90px"
                android:layout_x="0px"
                android:layout_y="49px"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/chnbar_bg3_left"
                    android:layout_width="10px"
                    android:layout_height="fill_parent"
                    android:layout_x="0px"
                    android:layout_y="0px"
                    android:background="@drawable/live_infobar_text_bg1" />

                <ImageView
                    android:id="@+id/chnbar_bg3_mid"
                    android:layout_width="800px"
                    android:layout_height="fill_parent"
                    android:layout_x="10px"
                    android:layout_y="0px"
                    android:background="@drawable/live_infobar_text_bg2" />

                <ImageView
                    android:id="@+id/chnbar_bg3_right"
                    android:layout_width="10px"
                    android:layout_height="fill_parent"
                    android:layout_x="810px"
                    android:layout_y="0px"
                    android:background="@drawable/live_infobar_text_bg3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="820px"
                android:layout_height="90px"
                android:layout_x="0px"
                android:layout_y="49px"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="820px"
                    android:layout_height="41px"
                    android:layout_x="0px"
                    android:layout_y="96px"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/IDC_TextView_chninfobar_noweventtime"
                        android:layout_width="760px"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10px"
                        android:gravity="center|left"
                        android:paddingEnd="10px"
                        android:paddingStart="10px"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="#FFFFFF"
                        android:textSize="23px" />

                    <TextView
                        android:id="@+id/IDC_TextView_chninfobar_nowevent"
                        android:layout_width="600px"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5px"
                        android:gravity="center|left"
                        android:paddingEnd="5px"
                        android:paddingStart="0px"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="#FFFFFF"
                        android:textSize="23px"
                        android:visibility="gone" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="820px"
                    android:layout_height="41px"
                    android:layout_x="0px"
                    android:layout_y="141px"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/IDC_TextView_chninfobar_nexteventtime"
                        android:layout_width="760px"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10px"
                        android:gravity="center|left"
                        android:paddingEnd="10px"
                        android:paddingStart="10px"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="#FFFFFF"
                        android:textSize="23px" />

                    <TextView
                        android:id="@+id/IDC_TextView_chninfobar_nextevent"
                        android:layout_width="600px"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5px"
                        android:gravity="center|left"
                        android:paddingEnd="5px"
                        android:paddingStart="0px"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="#FFFFFF"
                        android:textSize="23px"
                        android:visibility="gone" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </AbsoluteLayout>
    </RelativeLayout>

</RelativeLayout>