<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="951px"
    	android:layout_height="170px">

        <ImageView
            android:id="@+id/pageback_line1"
            android:layout_width="22px"
            android:layout_height="37px"
            android:layout_centerVertical="true"
            android:src="@drawable/new_ott_prev" />

        <GridView
            android:id="@+id/detail_relate_gridview"
            android:layout_marginLeft="63px"
            android:layout_width="822px"
            android:layout_height="170px"
            android:layout_centerVertical="true"
            android:horizontalSpacing="40px"
            android:gravity="center"
            android:listSelector="#00000000"
            android:numColumns="6" />

        <ImageView
            android:id="@+id/pagedown_line1"
            android:layout_marginLeft="929px"
            android:layout_width="22px"
            android:layout_height="37px"
            android:layout_centerVertical="true"
            android:src="@drawable/gridview_page_down" />

</RelativeLayout>