<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="1010px"
    	android:layout_height="170px"
    	android:orientation="horizontal"
    	android:gravity="center_vertical">

        <ImageView
            android:id="@+id/pageback_line1"
            android:layout_width="79px"
            android:layout_height="79px"
            android:clickable="true"
            android:focusable="false"
            android:layout_marginRight="20px"
            android:src="@drawable/home_page_up" />

        <GridView
            android:id="@+id/detail_relate_gridview"
            android:layout_width="810px"
            android:layout_height="170px"
            android:focusableInTouchMode="true"
			android:layout_gravity="center_horizontal"
            android:horizontalSpacing="30px"
            android:gravity="center"
            android:listSelector="#00000000"
            android:numColumns="6" />

        <ImageView
            android:id="@+id/pagedown_line1"
            android:layout_width="79px"
            android:layout_height="79px"
            android:layout_marginLeft="20px"
            android:clickable="true"
            android:focusable="false"
            android:src="@drawable/home_page_down" />

</LinearLayout>