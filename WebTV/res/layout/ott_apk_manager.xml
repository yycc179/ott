<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1280px"
    android:layout_height="720px"
    android:background="@drawable/new_ott_bg" >
    
    <ImageView
        android:layout_width="86dp"
        android:layout_height="105dp"
        android:layout_x="128dp"
        android:layout_y="46dp"
        android:background="@drawable/new_onlinevedio_app" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="230px"
        android:layout_y="83px"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="27px" />

    <ImageView
        android:id="@+id/IDC_GridView_OTT_pageback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="40px"
        android:layout_y="367px"
        android:background="@drawable/new_ott_prev" />

    <GridView
        android:id="@+id/IDC_GridView_OTT_mainApp_Grid"
        android:layout_width="1020dp"
        android:layout_height="480dp"
        android:layout_x="146dp"
        android:layout_y="160dp"
        android:listSelector="#00000000"
        android:verticalSpacing="20px"
        android:visibility="visible" >
    </GridView>

    <TextView
        android:id="@+id/IDC_GridView_OTT_PageNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1162px"
        android:layout_y="616px"
        android:gravity="center"
        android:textColor="#a4d9fb"
        android:textSize="21px" />

    <ImageView
        android:id="@+id/IDC_GridView_OTT_pagedown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="1219px"
        android:layout_y="367px"
        android:background="@drawable/new_ott_next" />

</AbsoluteLayout>